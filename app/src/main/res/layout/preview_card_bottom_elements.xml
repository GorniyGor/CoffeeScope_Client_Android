<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_preview_card_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPreviewBottomStatus"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/open_icon" />

        <TextView
            android:id="@+id/tvPreviewBottomJobTime"
            style="@style/PreviewCardCoffeeBottomDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_preview_card_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center_vertical"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_preview_card_place_rate"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/raiting_icon" />

        <TextView
            android:id="@+id/tv_preview_card_place_rate_count"
            style="@style/PreviewCardCoffeeBottomDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_preview_card_3"
        style="@style/PreviewCardCoffeeBottomDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:foregroundGravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_preview_card_place_range_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/dist_icon" />

        <TextView
            android:id="@+id/tv_preview_card_place_range_count"
            style="@style/PreviewCardCoffeeBottomDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>