<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--Превью карточка-->
    <style name="PreviewCard">
        <item name="android:gravity">start</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="PreviewCardCoffeeName" parent="PreviewCard">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PreviewCardCoffeeDescription" parent="PreviewCard">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="PreviewCardBottomElementsText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/lightBlack</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>
</resources>
