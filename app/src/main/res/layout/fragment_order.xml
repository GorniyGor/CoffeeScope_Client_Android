<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/order_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryRed" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_order_summa_count"
        android:layout_below="@+id/order_toolbar"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:scrollbars="none">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_order_place_name"
                style="@style/PreviewCardCoffeeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="8dp"
                android:text="Starbucks coffee"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:id="@+id/ll_order_place_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_place_name"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_order_place_address"
                        style="@style/PreviewCardCoffeeDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Адрес кофейни"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/tv_order_place_phone_number"
                        style="@style/PreviewCardCoffeeDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_order_place_address"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Телефон кофейни"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="3">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        app:cardCornerRadius="12dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/alpha_grey">

                            <ImageView
                                android:id="@+id/iv_order_place_average_time"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/time_icon_2" />

                            <TextView
                                android:id="@+id/tv_order_place_average_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/iv_order_place_average_time"
                                android:text="10 min" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/line_divider"
                layout="@layout/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ll_order_place_info"
                android:background="@color/line"
                android:paddingTop="8dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_order_basket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_divider"></android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/tv_order_coffee_comment"
                style="@style/PreviewCardCoffeeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rv_order_basket"
                android:layout_marginTop="8dp"
                android:text="@string/сomment"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="normal" />

            <include
                android:id="@+id/layout_comment_field"
                layout="@layout/fragment_order_comment_field"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_order_coffee_comment"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp" />

            <RadioGroup
                android:id="@+id/rg_order_coffee_time_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_comment_field"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:id="@+id/rb_1_order_coffee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Как можно скорее" />

                <RadioButton
                    android:id="@+id/rb_2_order_coffee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ко времени" />

            </RadioGroup>

            <TimePicker
                android:id="@+id/time_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rg_order_coffee_time_radio"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="7dp"
                android:background="@color/white"
                android:timePickerMode="spinner" />

            <include
                android:id="@+id/layout_how_to_pay"
                layout="@layout/fragment_order_how_to_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time_picker"
                android:layout_marginBottom="20dp" />

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_order_summa_count"
        android:layout_width="184dp"
        android:layout_height="40dp"
        android:layout_above="@+id/btn_order_pay_product"
        android:background="@drawable/price_frame"
        android:layout_marginBottom="12dp"
        android:textSize="22sp"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:text="Итого:" />

    <Button
        android:id="@+id/btn_order_pay_product"
        style="@style/button"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="Оформить заказ" />
</RelativeLayout>