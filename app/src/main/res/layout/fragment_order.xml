<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/order_toolbar"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:paddingStart="12dp"
        android:layout_below="@+id/order_toolbar"
        android:paddingEnd="12dp"
        android:layout_above="@+id/ll_order_coffee_bottom_buttons"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_order_coffee_name"
                style="@style/PreviewCardCoffeeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="8dp"
                android:text="Starbucks coffee"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/tv_order_coffee_address"
                style="@style/PreviewCardCoffeeDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_coffee_name"
                android:layout_marginBottom="8dp"
                android:background="@color/white"
                android:text="Ломоносовский пр-т, д. 88"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/tv_order_coffee_number"
                style="@style/PreviewCardCoffeeDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_coffee_address"
                android:layout_marginBottom="8dp"
                android:background="@color/white"
                android:text="8-903-999-99-99"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <View
                android:id="@+id/viewPreviewTopHorizontalLine"
                layout="@layout/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_order_coffee_number"
                android:background="@color/line"
                android:paddingTop="8dp" />

            <include
                android:id="@+id/layout_adapter_item"
                layout="@layout/coffee_adapter_item_swipe_del"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/viewPreviewTopHorizontalLine"
                android:background="@color/white" />

            <include
                android:id="@+id/layout_adapter_item2"
                layout="@layout/coffee_adapter_item_swipe_del"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/layout_adapter_item"
                android:background="@color/white" />

            <include
                android:id="@+id/layout_adapter_item3"
                layout="@layout/coffee_adapter_item_swipe_del"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/layout_adapter_item2"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tv_order_coffee_comment"
                style="@style/PreviewCardCoffeeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_adapter_item3"
                android:layout_marginTop="8dp"
                android:text="@string/сomment"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="normal" />

            <include
                android:id="@+id/layout_comment_field"
                layout="@layout/fragment_order_comment_field"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_order_coffee_comment"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp" />

            <RadioGroup
                android:id="@+id/rg_order_coffee_time_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/layout_comment_field">

                <RadioButton
                    android:id="@+id/rb_1_order_coffee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Как можно скорее" />

                <RadioButton
                    android:id="@+id/rb_2_order_coffee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ко времени" />

            </RadioGroup>

            <TimePicker
                android:id="@+id/time_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rg_order_coffee_time_radio"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:background="@color/white"
                android:timePickerMode="spinner" />

            <include
                android:id="@+id/layout_how_to_pay"
                layout="@layout/fragment_order_how_to_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time_picker"
                android:layout_marginBottom="20dp" />
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_order_coffee_bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_order_total"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/grey"
            android:paddingEnd="-12dp"
            android:paddingStart="-12dp"
            android:text="Итого: 125р" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/green"
            android:text="Оплатить" />
    </LinearLayout>
</RelativeLayout>