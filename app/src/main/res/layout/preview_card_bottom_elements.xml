<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_preview_card_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:foregroundGravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivPreviewBottomStatus"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/open_icon" />

        <TextView
            android:id="@+id/tvPreviewBottomJobTime"
            style="@style/PreviewCardCoffeeBottomDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="до 22-10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_preview_card_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toRightOf="@+id/ll_preview_card_1"
        app:layout_constraintRight_toLeftOf="@+id/ll_preview_card_3"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_preview_card_place_rate"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/star_icon_1" />

        <TextView
            android:id="@+id/tv_preview_card_place_rate_count"
            style="@style/PreviewCardCoffeeBottomDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_preview_card_3"
        style="@style/PreviewCardCoffeeBottomDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_preview_card_place_range_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/dist_icon" />

        <TextView
            android:id="@+id/tv_preview_card_place_range_count"
            style="@style/PreviewCardCoffeeBottomDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>