<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:id="@+id/llMainFrame"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_search_coffee_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toStartOf="@+id/tv_search_coffee_distance"
            android:textColor="@color/black"
            android:layout_alignParentStart="true"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_search_coffee_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_search_coffee_name"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:textColor="@color/grey"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_search_coffee_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/another_grey"
        android:textSize="16sp" />

</LinearLayout>